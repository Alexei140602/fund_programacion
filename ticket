#include <stdio.h>
//funcion para mostrar el ticket
void mostrarticket(char *archivo){
        char texto;
        FILE *file = fopen(archivo, "r");
        while ((texto = fgetc(file)) != EOF){
                putchar(texto);
        }
}

int main(){
  FILE *file = fopen("ticket.txt", "w");
  if (file != NULL){
    fprintf(file, "Nombre: %s\nAutobus: \nDestino: %s\nAsiento: %i", /*arreglo con el nombre, autobus, arreglo con el nombre del destino, coordenadas del arreglo con el asiento
    fclose(file);
  } else {
    puts("Error al generar el ticket");
  }
  mostrarticket("ticket.txt");
  return 0;
}
